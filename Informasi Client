        <tr align="center">
            <td colspan="3" bgcolor="red"><h1>Menampilkan Informasi Client</h1></td>
        </tr>
		<tr>
            <td><b>Nama</b></td>
            <td>:</td>
            <td>Ikhwan Maulana</td>
        </tr>
        <tr bgcolor="yellow">
            <td><b>NIM</b></td>
            <td>:</td>
            <td>2014081070</td>
        </tr>
        <tr>
            <td><b>Kelas</b></td>
