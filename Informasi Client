        </tr>
        <tr>
            <td><b>IP</b></td>
            <td>:</td>
            <td><?php echo $user_ip;?></td>
        </tr>
		<tr bgcolor="yellow">
            <td><b>Browser</b></td>
            <td>:</td>
            <td><?php echo $user_browser;?></td>
        </tr>
        <tr>
            <td><b>Negara</b></td>
            <td>:</td>
            <td><?php echo $location;?></td>
        </tr>
</table>
